@model List<PlatosModel>
@{
    ViewData["Title"] = "Menu";
}

<style>
    body {
        overflow-x: hidden;
    }
</style>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="3000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="card-img-top" src="../../imgs/picanha.jpg" style="height:550px;">
        </div>
        <div class="carousel-item">
            <img class="card-img-top" src="../../imgs/picanha.jpg" style="height:550px;">
        </div>
        <div class="carousel-item">
            <img class="card-img-top" src="../../imgs/picanha.jpg" style="height:550px;">
        </div>
    </div>
</div>

<div id="carouselExample" class="carousel slide m-0" data-ride="carousel" >
    <div class="carousel-inner">
        <div class="carousel-item active d-flex align-items-center">
            <img class="d-block w-100" src="../../imgs/bannerMenu.jpg" alt="..." style="height: 150px;">
            <div class="carousel-caption text-center">
                <h1>Menu</h1>
            </div>
        </div>
    </div>
</div>

<div class="row m-4 mt-0 justify-content-center">

    @foreach (var plato in Model)
    {
        <div class="col-md-3 m-2">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/imgs/@plato.Imagen" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@plato.NombrePlato</h5>
                    <p class="card-text">@plato.Descripcion</p>
                    <a asp-controller="Restaurante" asp-action="ConfirmOrderCar" class="btn btn-primary m-1 ">Añadir a carrito</a>
                    <a asp-action="MenuCatalogDetail" asp-controller="Restaurante" asp-route-id="@plato.IdPlat" class="btn btn-success ml-1">
                        Ver detalles
                    </a>
                </div>
            </div>
        </div>
    }
</div>
