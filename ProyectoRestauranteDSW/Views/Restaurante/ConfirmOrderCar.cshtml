@model ConfirmCarritoModel
@{
    ViewData["Title"] = "ConfirmOrderCar";
}

<div class="container">

<h1>En hora buena!!</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Plato
            </th>
            <th>
                Precio
            </th>
            <th>
                Cantidad
            </th>
            <th>
                &nbsp;
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.TemporalProducts != null)
        {
            @foreach (var plato in Model.TemporalProducts)
            {
                <tr>
                    <td>
                        <img class="card-img-top" src="@plato.Img" style="height:60px; width:60px;" alt="Card image cap">
                    </td>
                    <td>
                        @plato.PlatoName
                    </td>
                    <td>
                        @plato.PlatoPrice
                    </td>
                    <td>
                        @plato.Cantidad
                    </td>
                    <td>
                        <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<form method="post" asp-action="SaveShoppingCard">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h5><i class="fa-solid fa-circle-info"></i> Información del Cliente</h5>

                    <div class="row">
                        <div class="col-md-12">
                            <label>DNI:</label>
                            <input asp-for="DniUs" type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label>Nombres:</label>
                            <input asp-for="NombreUs" type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label>Apellido:</label>
                            <input asp-for="ApellidoUs" type="text" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <label>Dirección:</label>
                            <input asp-for="DirUs" type="text" class="form-control" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-6">

            <div class="row">
                <h5><i class="fa-solid fa-credit-card"></i> Información del pago</h5>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    <label>Correo :</label>
                    <input asp-for="CorreoUs" type="text" class="form-control" />
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-8">
                    <label>Contraseña:</label>
                    <input asp-for="ContraUs" type="text" class="form-control" placeholder="MM/YY" />
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <center>
                <button class="btn btn-success"> Confirmar comprar</button>
            </center>
        </div>
    </div>
</form>
</div>