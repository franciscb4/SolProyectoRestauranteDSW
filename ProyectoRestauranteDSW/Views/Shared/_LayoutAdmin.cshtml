<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoRestauranteDSW</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            overflow-x: hidden;
        }

        #sidebar {
            width: 250px;
            height: 100%;
            position: fixed;
            background-color: #EEEEEE;
            color: #fff;
        }

            #sidebar ul.components {
                padding: 20px 0;
            }

            #sidebar a {
                padding: 10px 15px;
                font-size: 1.2em;
                display: block;
                color: #000000;
            }

                #sidebar a:hover {
                    background-color: #525252;
                }

        #content {
            margin-left: 250px; /* Puedes ajustar esto según tus necesidades */
            padding: 15px;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <a class="navbar-brand mx-auto" asp-controller="Home" asp-action="Index" style="width:150px"><img src="~/imgs/logo.png" class="rounded img-fluid" alt="Logo del restaurante" /></a>
            <ul class="list-unstyled components">
                <li>
                    <a asp-controller="Platos" asp-action="ListPlat">Platos</a>
                </li>
                <li>
                    <a asp-controller="Locales" asp-action="ListLoc">Locales</a>
                </li>
                <li>
                    <a asp-controller="Usuarios" asp-action="ListUsu">Usuarios</a>
                </li>
                <li>
                    <a asp-controller="Reservas" asp-action="ListReser">Reservas</a>
                </li>
            </ul>
        </nav>
        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>