@model PlatosModel

@{
    ViewData["Title"] = "Editar Plato";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditSavedPlat" method="post">
    <div class="form-group">
        <label asp-for="NombrePlato"></label>
        <input asp-for="NombrePlato" class="form-control" />
        <span asp-validation-for="NombrePlato" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input asp-for="Imagen" class="form-control" />
        <span asp-validation-for="Imagen" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IdPlat" />

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

