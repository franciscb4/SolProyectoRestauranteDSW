@model List<PlatosModel>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "platos listado";
}

<div class="row mt-5">
    <div class="col-md-12">
        <style>
            h1 {
                font-size: 24px;
                font-weight: bold;
                text-align: center;
                color: #8B0000; 
            }
        </style>
        <h1>LISTADO DE LOS PLATOS</h1>
        <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nombre 
                </th>
                <th>
                    Precio
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Imagen
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.IdPlat
                    </td>
                    <td>
                        @item.NombrePlato
                    </td>
                    <td>
                        @item.Precio
                    </td>
                    <td>
                        @item.Descripcion
                    </td>
                    <td>
                            <img src="~/imgs/@item.Imagen" style="width: 50px; height: 50px;">
                    </td>
                        <td>
                            <a asp-action="EditPlat" asp-route-id="@item.IdPlat" class="btn btn-primary">Editar</a>
                            <a asp-action="DeletePlat" asp-route-id="@item.IdPlat" class="btn btn-danger">Eliminar</a>
                        </td>
                </tr>
            }
        </tbody>

    </table>
    </div>
    </div>

    <div class="row">
    <div class="md-12">
        <a class="btn btn-primary" asp-action="AddPlat" >
            Añadir Nuevo
        </a>
    </div>
</div>
